<!DOCTYPE html>
<html>
  <head>
    <title>Kate Ringland Alt Text BTS ARMY</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-labelledby="Close"></button>
      </div>
    <% elsif flash[:error] %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= flash[:error] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-labelledby="Close"></button>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= flash[:alert] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-labelledby="Close"></button>
      </div>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Kate Ringland Alt Text BTS ARMY</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Images", alts_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Alt Text", alt_texts_path, class: "nav-link" %>
            </li>
          </ul>
          <% if user_signed_in? %>
            <%= link_to "Account", edit_user_registration_path, class: "text-white ms-1 btn btn-primary" %>
            <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "ms-1 btn btn-outline-primary" %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, class: "text-white ms-1 btn btn-primary"  %>
            <%= link_to "Login", new_user_session_path, class: "ms-1 btn btn-outline-primary"  %>
          <% end %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
