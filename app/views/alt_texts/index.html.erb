<main class="container-fluid pt-3 p-5">

<!--<h1 class="text-left px-5">Alt texts</h1>-->
<ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Alt Texts</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Flagged</button>
  </li>
</ul>




  <hr class="border-bottom border-muted my-5">
   
 <div class="tab-content" id="pills-tabContent">
  <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
    <div id="alts" class="row col-lg-12 p-5">
    <% if !@alt_texts.nil? && params[:alt_id].present? == false  %>
      <% @alt_texts.each do |alt_text| %>
      
          <div class="col-lg-3 mb-5">
            <%= link_to alt_alt_texts_path(alt_text.alt_id) do %>
              <%= image_tag alt_text.alt.image_url(:small), class: "image", caption: alt_text.alt.title, alt: alt_text.alt.alt_texts.last.body, class: "border rounded image img-fluid w-100", height: alt_text.alt.image(:small).height, width: alt_text.alt.image(:small).width %>
            <% end %>
          </div>

          <div id="alt_texts" class="col-lg-3">
            <% alt_text.alt.alt_texts.each do |alt_text| %>
              <%= render alt_text %>
              <p>
                <%= link_to "Show this alt text", alt_text %>
              </p>
            <%end%>
          </div>
      
        <% end %>
      
       <% else %> 
       <div id="alt_texts" class="col-lg-3">
            <% @alt_texts.each do |alt_text| %>
              <%= render alt_text %>
              <p>
                <%= link_to "Show this alt text", alt_text %>
              </p>
            <%end%>
          </div>
     

      <%end%>
    </div>
      <%= link_to "New alt text", new_alt_text_path %>
  </div>
  <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
    <div id="alts" class="row col-lg-12 p-5">
      <% if !@alt_texts.nil? && !params[:alt_id].present?%>
      <% @alt_texts.each do |alt_text| %>
        <% if alt_text.alt.flag.nil? == false %>
            <% if alt_text.alt.flag == true %>

          <div class="col-lg-3 mb-5">
            <%= link_to alt_text.alt.image_url(:small) do %>
              <%= image_tag alt_text.alt.image_url(:small), class: "image", caption: alt_text.alt.title, alt: alt_text.alt.alt_texts.last.body, class: "border rounded image img-fluid w-100", height: alt_text.alt.image(:small).height, width: alt_text.alt.image(:small).width %>
            <% end %>
          </div>
          
          <div id="alt_texts" class="col-lg-3">
            <div class="accordion" id="accordionExample">
            

            <% alt_text.alt.alt_texts.each do |alt_text| %>
             <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                  <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Alt Text 
                  </button>
                </h2>
                 <div id="collapse<%= alt_text.id%>" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                       <%= render alt_text %>
                      <p>
                        <%= link_to "Show this alt text", alt_text %>
                      </p>
                    </div>
                  </div>

             
              </div>
            <%end%>

            </div>
          </div>
         <%end%>
         <%end%>
        <% end %>
    <% end %>
  </div>

<%= link_to "New alt text", new_alt_text_path %>
</div>
</div>    
