<main class="container-fluid pt-3">
  <section class="container">

    <div class="col-8 mt-5 pt-3 mx-auto">
      <%= form_with url: verify_path, method: :get do |form| %>
        <div class="input-group input-group-lg">
          <%= form.label :query, "Search for:", class: "sr-only" %>
          <%= form.text_field :query, placeholder: "search for...", class: "form-control rounded " %>
          <%= form.submit "Search", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <hr class="border-bottom border-muted my-2">
    <div class="text-center">
      <a href="<%= verify_path %>" class="fs-3">
        <i class="fa-solid fa-arrows-rotate"></i> Refresh 
      </a>
    </div>
    <div class="row">

      <div class="col-lg-10">
        <div id="altverify_me" class="row">
          <% @alts.each do |altverify_me| %>
          <% if altverify_me.verified == false %>
            <div class="col-lg-6 mx-auto">
                <%= render "altverify_me", alt: altverify_me %>
            </div>
            <%end%>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-lg-2 position-absolute bottom-0 end-0">
      <div id= "twitter-feed" class="row">
          <a class="twitter-timeline" data-height="330" data-width="220" href="https://twitter.com/bts_bighit?ref_src=twsrc%5Etfw">Tweets by bts_bighit</a> 
          <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>
    </div>
  </section>
</main>
