<main class="container">
  <%= render 'alt_show', alt: @alt %>
  <% if user_signed_in? && current_user.flag != true %>
    <button type="button" class="btn mt-3 btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Participate*
    </button>
    <p class="text-muted">*Help Seven Army improve the title, tags, source, alt text, and etc. of this image</p> 
    <div class="modal fade shadow-lg" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><%= @alt.title %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= render "form", alt: @alt %> 
          </div>
        </div>
      </div>
    </div>
    <% if user_signed_in? && (current_user == @alt_show.user) || super_admin %>
      <%= button_to 'Delete', @alt, method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure you want to delete this image?' } %>
    <% end %>
  <% else %>
    <button type="button" class="btn mt-3 btn-primary disabled" href="#">
      Participate*
    </button>
    <% if user_signed_in? && current_user.flag == true %>
      <p class="text-danger">Your account is flagged for inappropriate use</p>
    <% end %>
    <% if !user_signed_in? %>
      <p class="text-muted  ">*<%= link_to "Log in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %> to help Seven Army improve this image</p> 
    <% end %>
  <% end %>
</main>
